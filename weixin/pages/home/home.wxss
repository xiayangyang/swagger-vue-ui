.show-author {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background: #000;
  opacity: 0.8;
}

.show-author>.get-userinfo {
  color: #fff;
  background-color: #f00;
  border-radius: 10rpx;
  top: 50%;
  margin-top: 70%;
}
/* 主页样式 */
.home_container {}
/* 头部 */
.home_header {
  padding: 0 20rpx;
}
.home_header .home_search_container {}
.home_header .home_search_container .invented_search_container {
  position: relative;
  padding: 20rpx 0;
  display: flex;
}
.invented_search_container .search_icon {
  position: absolute;
  left: 30rpx;
  top: 32rpx;
  font-size: 40rpx;
  color: #999;
}
.invented_search_container .search_inp {
  height: 60rpx;
  width: 100%;
  padding: 0 40rpx 0 80rpx;
  border: 2rpx solid #efefef;
  border-radius: 60rpx;
}
/* banner */
.home_header .home_banner_container {
  height: 400rpx;
}
.home_banner_container .banner_img{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
/* 中间分类 */
.home_classify_container {
  display: flex;
  flex-flow: row wrap;
  padding: 20rpx 20rpx 10rpx;
}
.home_classify_container .classify_item {
  width: 20%;
  text-align: center;
  margin-bottom: 10rpx;
}
.classify_item .classify_item_icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.classify_item .classify_item_txt {}
.gray {
  height: 10rpx;
  background-color: #eee;
}
/* 商品分类左右滚动 */
.home_classify_tabbar_container {
  box-sizing: border-box;
  padding: 0 20rpx;
  white-space: nowrap;
  overflow-x: auto;
}
.home_classify_tabbar_container .classify_tabbar_item {
  position: relative;
  display: inline-block;
  margin-right: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.classify_tabbar_item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background-color: orange;
  border-radius: 4rpx;
}
/* 底部商品滚动容器 */
.home_scroll_container {
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #eee;
}
.goods_item {
  box-sizing: border-box;
  padding: 10rpx;
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.goods_item .goods_item_img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.goods_item .goods_item_right{}
.goods_item_right .goods_title {
  font-size: 32rpx;
  font-weight: bold;
}
.goods_item_right .goods_desc {
  font-size: 28rpx;
  color: #999;
}
/* 已售剩余 */
.goods_item_right .goods_solded {}
.goods_solded .goods_solded_item {
  display: inline-block;
  padding: 4rpx 10rpx;
  border: 1px solid red;
  font-size: 24rpx;
}
.goods_solded .solded {
  border-right: none;
  color: red;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
}
.goods_solded .surplus {
  border-left: none;
  color: #fff;
  background-color: red;
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}
/* 原价、现价、购物车、购物车加减按钮 */
.goods_item_right .goods_buy_container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_buy_container .price_container {
  width: 300rpx;
}
.price_container .price {
  color: red;
  font-size: 48rpx;
  font-weight: bold;
}
.price_container .old_price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.goods_buy_container .shopcar_container {
  display: flex;
  justify-content: flex-end;
  padding-right: 20rpx;
  width: 145rpx;
}
.add_shopcar_container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.reduce_icon,
.add_icon {
  color: red;
  font-size: 48rpx;
}
.shopcar_icon_container {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  background-color: red;
  color: #fff;
}
.shopcar_icon_container .iconfont {
  font-size: 28rpx;
}